{
    "manifest_version": 3,
    "name": "Gmail Genie",
    "description": "AI-powered assistant for Gmail to draft, rewrite, and summarize emails effortlessly.",
    "version": "1.0",
    "permissions": [
      "activeTab",
      "scripting",
      "storage",
      "identity"
    ],
    "host_permissions": [
      "https://mail.google.com/*",
      "https://www.googleapis.com/*"
    ],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup.html",
      "default_icon": "/icons/icon.png"
    },
    "content_scripts": [
      {
        "matches": ["https://mail.google.com/*"],
        "js": ["content.js"]
      }
    ],
    "icons": {
      "128": "/icons/icon.png"
    },
    "oauth2": {
      "client_id": "YOUR_CLIENT_ID.apps.googleusercontent.com",
      "scopes": [
        "https://www.googleapis.com/auth/gmail.modify"
      ]
    }
  }